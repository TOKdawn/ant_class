<view class="scontainer">
    <modal title="您已学习{{day_num}}天" hidden="{{modalHidden2}}" confirm-text="" cancel-text=""></modal>
    <view class="studytop">
        <view class="words">
            <p></p>
            <p class="title"></p>
            <i><image src="/images/arrow_right_white.png"></image></i>
        </view>
        <!-- <canvas style="width: 400rpx;height: 400rpx;" canvas-id="dayscanvas"></canvas> -->
        <view class="daysbox">
            <div class="days">
                <p>已完成</p>
                <p class="dpeven">{{lest_word}}</p>
                <p>需完成</p>
                <p class="dpeven">{{my_word}}</p>
            </div>
        </view>
        <view class="jinxing">
            <p>已进行<span>{{day_num}}</span>天</p>
            <p>剩余<span>{{shengyu}}</span>天</p>
        </view>
    </view>
    <view class="studybottom">
        <ul class="week">
            <li>Mon</li>
            <li>Tue</li>
            <li>Wed</li>
            <li>Thu</li>
            <li>Fri</li>
            <li>Sat</li>
            <li>Sun</li>
        </ul>
        <ul class="dai">
            <li>
                <p><i>{{today_word}}</i>个</p>
                <p>今日单词</p>
            </li>
            <li>
                <p><i>{{new_word}}</i>个</p>
                <p>今日新词</p>
            </li>
        </ul>

      <ul class="xuefu"  bindtap="a">
           
         <li><p>学习</p></li> 
         <li><p class="fuxi" bindtap="b">复习</p></li>
            
      </ul>

        
    </view>
</view>
